// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["typedSql"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
    id      Int         @id @default(autoincrement())
    username String     @unique @map("nome_do_usuario")
    email            String    @unique @map("email") 
    password         String    @map("password")
    dataNascimento   DateTime? @map("data_de_nascimento")
    genero           String?   @map("genero")
    telefone         String?   @map("telefone")
    //tasks            Task[]   
    @@map("Usuario")
}

model Task {
  id      Int      @id @default(autoincrement())
  title   String   @map("titulo")
  content String?  @map("conteudo")
  status  Boolean  @default(false)@map("status")

  @@map("Tarefa")
}